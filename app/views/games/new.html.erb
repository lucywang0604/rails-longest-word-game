<h1>New Game</h1>
<p>
  <% @letters.each do |letter| %>
    <span class="letter"><%= letter %></span>
  <% end %>
</p>

<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters.join(',') %>
  <!-- ... -->
  <!-- Input field for the word guess -->

  <label for="word">What is the longest word you can find?</label><br/>
  <input id="word" type="text" name="word" placeholder="Enter your guess" required>


  <!-- Submit button -->
  <input type="submit" value="Submit">
</form>
